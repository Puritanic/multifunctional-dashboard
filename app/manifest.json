{
    "manifest_version":     2,

    "name":                 "Multidash",
    "description":          "A chrome extension with multiple features",
    "version":              "0.9",

    "browser_action": {
        "default_icon":     "icons/icon48.png",
        "default_title":    "A chrome extension with multiple features",
        "default_popup":    "index.html"
    },

    "icons": 
	{ 
		"16": 				          "icons/icon16.png",
		"48": 				          "icons/icon48.png",
		"128": 				          "icons/icon128.png"
	},

    "options_page":         "options.html",
    
    "background": {
        "scripts":          ["eventpage.js"],
        "persistent":       false
    },
    "content_scripts": [
      {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "selection.js"
        ],
        "run_at": "document_start",
        "all_frames": true
      }
    ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default":          "Ctrl+Shift+E",
        "linux":            "Ctrl+Shift+K",
        "windows":          "Alt+Shift+P",
        "mac":              "Alt+Shift+P"
      }
    }
  },

  "web_accessible_resources": [
    "assets/images/color-picker.png"
  ],

    "permissions": [
                            "storage",
                            "notifications",
                            "contextMenus",
                            "clipboardWrite",
                            "activeTab"
    ]
}
